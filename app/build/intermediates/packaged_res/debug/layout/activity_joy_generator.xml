<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.generator.JoyGeneratorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/joy_generator"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/warm_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Joke Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/joke_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/orange_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="😂 Анекдот дня"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/joke_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Загружается..."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/more_jokes_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/more_button"
                    android:textColor="@color/orange_medium"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Fact Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fact_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/sage_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🧠 Факт дня"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/fact_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Загружается..."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/more_facts_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/more_button"
                    android:textColor="@color/sage_medium"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quote Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/quote_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/warm_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="очень важно"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quote_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Загружается..."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/more_quotes_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/more_button"
                    android:textColor="@color/warm_primary"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Meme Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/meme_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/terracotta">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="не менее важноо"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/meme_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Загружается..."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/more_memes_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/more_button"
                    android:textColor="@color/terracotta"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/orange_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✨ О генераторе радости"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Каждый день новый контент для поднятия настроения\n• Нажимай 'Еще!' для дополнительных порций радости\n• Все анекдоты, факты и цитаты с любовью! 💕"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>