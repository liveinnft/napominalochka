<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/photo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заголовок фото"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/warm_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:background="@color/warm_surface"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/photo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Описание фотографии..."
        android:textSize="14sp"
        android:textColor="@color/warm_on_surface"
        android:lineSpacingMultiplier="1.2" />

</LinearLayout>