    <color name="orange_light">#F2D7B3</color>
    <color name="orange_medium">#E8B882</color>
    <color name="sage_dark">#7A8C6B</color>
    <color name="sage_light">#B8C5A6</color>
    <color name="sage_medium">#9CAF88</color>
    <color name="sand">#E6D7C3</color>
    <color name="success">#7A8C6B</color>
    <color name="terracotta">#C17B5C</color>
    <color name="text_light">#FFFFFF</color>
    <color name="text_primary">#3E3427</color>
    <color name="text_secondary">#6B5B47</color>
    <color name="text_warm">#8B7355</color>
    <color name="transparent">#00000000</color>
    <color name="warm_accent">#E6B885</color>
    <color name="warm_accent_dark">#C19B5C</color>
    <color name="warm_background">#F5F0E8</color>
    <color name="warm_on_surface">#3E3427</color>
    <color name="warm_primary">#D4A574</color>
    <color name="warm_primary_dark">#B8956A</color>
    <color name="warm_surface">#FFFEF9</color>
    <color name="warning">#E8B882</color>
    <color name="white">#FFFFFF</color>
    <style name="CardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="RomanticButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/warm_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Theme.Napominalochka" parent="Theme.MaterialComponents.Light.DarkActionBar">
        
        <item name="colorPrimary">@color/warm_primary</item>
        <item name="colorPrimaryVariant">@color/warm_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/warm_accent</item>
        <item name="colorSecondaryVariant">@color/warm_accent_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_card</item>
        
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <item name="android:navigationBarColor" ns1:targetApi="l">@color/background_light</item>
        <item name="android:windowLightNavigationBar" ns1:targetApi="o">true</item>
        
    </style>
    <style name="Theme.Napominalochka.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.Napominalochka.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Napominalochka.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
    </style>
</resources>