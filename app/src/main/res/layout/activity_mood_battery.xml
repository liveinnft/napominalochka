<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background_light"
    android:gravity="center"
    tools:context=".ui.mood.MoodBatteryActivity">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood_battery"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/pink_primary"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Battery Visualization Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/background_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Battery Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔋"
                android:textSize="64sp"
                android:layout_marginBottom="16dp" />

            <!-- Love Level Text -->
            <TextView
                android:id="@+id/love_level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/love_level"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Progress Bar Container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginBottom="16dp">

                <!-- Background Progress Bar -->
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/battery_background"
                    android:layout_centerInParent="true" />

                <!-- Main Progress Bar -->
                <ProgressBar
                    android:id="@+id/battery_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/battery_progress"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <!-- Battery Status Text -->
            <TextView
                android:id="@+id/battery_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Хороший уровень любви! 💚"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Charge Button -->
    <Button
        android:id="@+id/charge_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/charge_love"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@style/RomanticButton"
        android:drawableStart="@drawable/ic_heart"
        android:drawablePadding="8dp"
        android:layout_marginBottom="24dp" />

    <!-- Tips Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/purple_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💡 Совет"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Батарейка настроения автоматически разряжается каждый день. Заряжай её, чтобы получать новые порции любви!"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>