<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.stats.RelationshipStatsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/relationship_stats"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/warm_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Main Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/background_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 Наша статистика"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="20dp" />

                <!-- Days Together -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/days_together"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/days_together_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 день"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/warm_primary" />

                </LinearLayout>

                <!-- Messages -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/messages_sent"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/messages_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 сообщений"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/warm_primary" />

                </LinearLayout>

                <!-- Video Calls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/video_calls"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/video_calls_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 звонков"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/warm_primary" />

                </LinearLayout>

                <!-- Smiles -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/smiles_sent"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/smiles_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 смайликов"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/warm_primary" />

                </LinearLayout>

                <!-- Total Points -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Очки настроения"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/total_points_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 очков"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/warm_primary" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Romance Level Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/sage_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/romance_level_today"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/romance_level_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/warm_primary"
                    android:layout_marginBottom="16dp" />

                <ProgressBar
                    android:id="@+id/romance_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/battery_progress" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Achievements Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/background_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏆 Достижения"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/achievements_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌱 Только начинаем!"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Edit Button -->
        <Button
            android:id="@+id/edit_stats_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="📝 Редактировать статистику"
            style="@style/RomanticButton" />

    </LinearLayout>

</ScrollView>