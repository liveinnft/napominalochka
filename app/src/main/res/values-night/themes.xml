<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for NIGHT MODE - forced to light theme -->
    <style name="Theme.Napominalochka" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/warm_primary</item>
        <item name="colorPrimaryVariant">@color/warm_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/warm_accent</item>
        <item name="colorSecondaryVariant">@color/warm_accent_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background colors - FORCED LIGHT -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_card</item>
        <!-- Text colors - FIXED for all themes -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <!-- Force light navigation bar -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/background_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Napominalochka.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Napominalochka.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Napominalochka.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom Card Style -->
    <style name="CardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Romantic Button Style -->
    <style name="RomanticButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/warm_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">center</item>
    </style>

</resources>